@model InteriorPlatform.Data.Models.Position

@{
    ViewData["Title"] = "Позиция - Изтриване";
}

<div class="container">
    <h2>Изтриване</h2>

    <h3>Сигурни ли сте, че искате да изтриете записа?</h3>
    <h4>Позиция</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Име
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Изтрит ли е ?
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
        <dt>
            Изтрит
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DeletedOn)
        </dd>
        <dt>
            Създаден
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt>
            Редактиран
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-default" asp-action="Index">Назад</a>
        <input type="submit" value="Изтриване" class="btn btn-danger" />
    </form>
</div>
