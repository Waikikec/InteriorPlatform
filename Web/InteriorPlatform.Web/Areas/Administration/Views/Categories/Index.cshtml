@model IEnumerable<InteriorPlatform.Data.Models.Category>
@{
    ViewData["Title"] = "Админ(Категории)";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>Категории</h2>
        <a type="button" rel="tooltip" class="btn btn-info btn-round" asp-action="Create">
            <i class="fa fa-plus" aria-hidden="true"></i>  Нова Категория
        </a>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Номер
                        </th>
                        <th>
                            Име
                        </th>
                        <th>
                            Изтрит
                        </th>
                        <th>
                            Създаден
                        </th>
                        <th>
                            Редактиран
                        </th>
                        <th class="text-right">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsDeleted)
                                @Html.DisplayFor(modelItem => item.DeletedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModifiedOn)
                            </td>
                            <td class="td-actions text-right">
                                <a type="button" rel="tooltip" class="btn btn-info btn-round" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="material-icons">edit</i>
                                </a>
                                <a type="button" rel="tooltip" class="btn btn-success btn-round" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="material-icons">person</i>
                                </a>
                                <a type="button" rel="tooltip" class="btn btn-danger btn-round" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="material-icons">close</i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
