@model InteriorPlatform.Web.ViewModels.Designer.AllDesignersViewModel
@{
    this.ViewData["Title"] = "Всички дизайнери";
}

@if (this.TempData.ContainsKey("InquireCreatedSuccessfully"))
{
    <div class="alert alert-success">@this.TempData["InquireCreatedSuccessfully"]</div>
}

<div class="container">
    <h3 class="card-title">Всички дизайнери</h3>
    <hr />
    <div class="row">
        @foreach (var designer in Model.Designers)
        {
            <div class="col-md-3">
                <div class="card card-profile">
                    <a asp-action="ById" asp-route-id="@designer.Id">
                        <div class="card-image">
                            @if (designer.ProfilePicture == null)
                            {
                                <img class="img" src="~/assets/img/placeholder.jpg" alt="@designer.Id" />
                            }
                            else
                            {
                                <img class="img" src="@designer.ProfilePicture.PictureUrl" alt="@designer.Id" />
                            }
                        </div>
                    </a>
                    <div class="card-content">
                        <h4 class="card-title">@designer.FirstName @designer.LastName</h4>
                        <h6 class="category text-muted">@designer.PositionName</h6>
                        <hr />
                        <div class="row">
                            <div class="col-sm-9">
                                <span class="card-description float-start d-flex align-items-center">
                                    <span class="material-icons">location_on</span>
                                    <span>@designer.TownName</span>
                                </span>
                            </div>
                            <div class="col-sm-3">
                                <span class="card-description float-end d-flex align-items-center">
                                    <span class="material-icons">work</span>
                                    <span>@designer.ProjectsCount</span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <partial name="_PagingPartial" model="@Model" />
</div>
