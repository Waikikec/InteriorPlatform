@model PagingViewModel
<div class="pagination-area text-center">
    <ul class="pagination">
        <li class="@if (!Model.HasPreviousPage) { <text>disabled</text>}">
            <a asp-action="All" asp-route-id="@Model.PreviousPageNumber">« Previous</a>
        </li>
        @for (int i = Model.PageNumber - 1; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li><a asp-action="All" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="active"><span>@Model.PageNumber</span></li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 2; i++)
        {
            if (i <= Model.PagesCount + 2)
            {
                <li><a asp-action="All" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="@if (!Model.HasNextPage) { <text>disabled</text>}">
            <a asp-action="All" asp-route-id="@Model.NextPageNumber">Next »</a>
        </li>
    </ul>
</div>